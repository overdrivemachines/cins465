<p id="notice"><%= notice %></p>

<h1><%= @professor.university + ": " + @professor.name %>'s Ratings </h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Comment</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professor.ratings.each do |rating| %>
      <tr>
        <td><%= rating.course %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Show all ratings', professor_ratings_path(@professor) %> |
<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>
