<header>
	<h1>Wladder Game</h1>
	<% if (@won_game) %>
		<h2 class="won">YOU WON</h2>
	<% else %>
		<h2 class="lost">YOU LOST</h2>
	<% end %>
</header>
<h3>Your Answer</h3>
<div class="main">
	<ul class="word-list">
		<% @words.each do |word| %>
			<li><%= word %></li>
		<% end %>
	</ul>
	<%= link_to("Play Again", root_path, class: 'btn') %>
</div>
<% if (@won_game == false) %>
	<h3>Correct Answer</h3>
	<div class="main">
		<ul class="word-list">
			<% @correct_words.each do |word| %>
				<li><%= word %></li>
			<% end %>
		</ul>
		<%= link_to("Play Again", root_path, class: 'btn') %>
	</div>
<% end %>