<div id="page">
	<header>
		<h1>Wladder Game</h1>
	</header>
	<%= form_tag(result_path, method: "get") do %>
		<div id="main">
			<ul id="word-list">
				<li><%= @start_word %></li>
				<li class="user-entered-word"><%= text_field_tag(:word1) %></li>
				<li class="user-entered-word"><%= text_field_tag(:word2) %></li>
				<li><%= @end_word %></li>
			</ul>
			<%= hidden_field_tag("start_word", @start_word) %>
			<%= hidden_field_tag("end_word", @end_word) %>
			<%= submit_tag("ENTER", class: "btn") %>
		</div>
	<% end %>
</div>
